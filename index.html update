    const defaultRates = {
      officialUSD: 135.5,
      officialEUR: 145.3,
      blackUSD: 232,
      blackEUR: 250
    };

    const formatNumber = (num) =>
      new Intl.NumberFormat('fr-DZ').format(Math.round(num || 0));

    const formatCurrency = (num, curr = 'DZD') => {
      if (curr === 'DZD') return `${formatNumber(num)} DZD`;
      const symbol = curr === 'USD' ? '$' : '‚Ç¨';
      return `${symbol}${formatNumber(num)}`;
    };

    function DzairCalculator() {
      const [lang, setLang] = useState('fr');
      const [currency, setCurrency] = useState('USD');
      const [vehicleAge, setVehicleAge] = useState('used');
      const [engineType, setEngineType] = useState('gasolineSmall');
      const [carPrice, setCarPrice] = useState('');
      const [freightInsurance, setFreightInsurance] = useState('');
      const [inspection, setInspection] = useState('15000');
      const [documentation, setDocumentation] = useState('10000');
      const [portBroker, setPortBroker] = useState('150000');
      const [officialUSD, setOfficialUSD] = useState(defaultRates.officialUSD);
      const [officialEUR, setOfficialEUR] = useState(defaultRates.officialEUR);
      const [blackUSD, setBlackUSD] = useState(defaultRates.blackUSD);
      const [blackEUR, setBlackEUR] = useState(defaultRates.blackEUR);
      const [lastUpdate] = useState(new Date().toLocaleString());
      const [results, setResults] = useState(null);
      const [showResults, setShowResults] = useState(false);
      const [potentialUsedSavings, setPotentialUsedSavings] = useState(0);

      const t = translations[lang];
      const isRTL = lang === 'ar';

      const calculate = useCallback(() => {
        const price = parseFloat(carPrice) || 0;
        const freight = parseFloat(freightInsurance) || 0;
        const inspectionFee = parseFloat(inspection) || 0;
        const docFee = parseFloat(documentation) || 0;
        const portFee = parseFloat(portBroker) || 0;

        const blackRate = currency === 'USD' ? blackUSD : blackEUR;
        const officialRate = currency === 'USD' ? officialUSD : officialEUR;

        if (!price) {
          setShowResults(false);
          setResults(null);
          setPotentialUsedSavings(0);
          return;
        }

        // Parallel market conversions
        const fobDZD = price * blackRate;
        const freightDZD = freight * blackRate;

        const localExpenses = inspectionFee + docFee + portFee;

        // CIF at official rate
        const cifCustoms = (price + freight) * officialRate;

        let taxes = {};
        let totalTax = 0;
        let newCarTaxAmount = 0;
        let usedCarTaxPreview = 0;

        if (vehicleAge === 'new') {
          const ddRate = newCarDdRates[engineType] || 0;
          const dd = cifCustoms * (ddRate / 100);
          const tcs = cifCustoms * (TAX_TCS / 100);
          const tva = (cifCustoms + dd + tcs) * (TAX_TVA / 100);

          newCarTaxAmount = NEW_CAR_VIGNETTE;
          totalTax = dd + tcs + tva;

          taxes = {
            dd,
            tcs,
            tva,
            ddRate,
            tcsRate: TAX_TCS,
            tvaRate: TAX_TVA,
            breakdown: true
          };

          const usedInfo = usedCarTaxRates[engineType];
          if (usedInfo) {
            usedCarTaxPreview = cifCustoms * (usedInfo.finalRate / 100);
            const potential = totalTax + newCarTaxAmount - usedCarTaxPreview;
            setPotentialUsedSavings(potential > 0 ? potential : 0);
          } else {
            setPotentialUsedSavings(0);
          }

        } else {
          const rateInfo = usedCarTaxRates[engineType];
          if (rateInfo) {
            totalTax = cifCustoms * (rateInfo.finalRate / 100);
            taxes = {
              baseRate: rateInfo.baseRate,
              discount: rateInfo.discount,
              finalRate: rateInfo.finalRate,
              breakdown: false
            };
          }
          newCarTaxAmount = 0;
          setPotentialUsedSavings(0);
        }

        const total = fobDZD + freightDZD + localExpenses + totalTax + newCarTaxAmount;

        setResults({
          price,
          freight,
          fobDZD,
          freightDZD,
          inspectionFee,
          docFee,
          portFee,
          localExpenses,
          cifCustoms,
          taxes,
          totalTax,
          newCarTaxAmount,
          total,
          blackRate,
          officialRate,
          usedCarTaxPreview
        });
        setShowResults(true);
      }, [
        carPrice, freightInsurance, inspection, documentation, portBroker,
        currency, blackUSD, blackEUR, officialUSD, officialEUR, vehicleAge, engineType
      ]);

      useEffect(() => {
        if (carPrice) calculate();
      }, [
        carPrice, freightInsurance, inspection, documentation, portBroker,
        currency, blackUSD, blackEUR, officialUSD, officialEUR, vehicleAge, engineType, calculate
      ]);

      useEffect(() => {
        document.documentElement.lang = lang;
      }, [lang]);

      const engineButtons = [
        { value: 'electric', label: t.electric, icon: '‚ö°', rateUsed: '11.42%' },
        { value: 'gasolineSmall', label: t.gasolineSmall, icon: '‚õΩ', rateUsed: '19.62%' },
        { value: 'gasolineLarge', label: t.gasolineLarge, icon: '‚õΩ', rateUsed: '121.06%' },
        { value: 'hybridSmall', label: t.hybridSmall, icon: 'üîã', rateUsed: '19.62%' },
        { value: 'hybridLarge', label: t.hybridLarge, icon: 'üîã', rateUsed: '121.06%' }
      ];

      const containerClass = isRTL ? 'rtl' : 'ltr';

      return (
        <div className={`min-h-screen pb-10 ${containerClass}`}>
          {/* Hero / header */}
          <header className="border-b border-slate-800/60 bg-gradient-to-r from-slate-950/80 via-slate-900/80 to-slate-950/80 backdrop-blur">
            <div className="max-w-6xl mx-auto px-4 py-4 md:py-5 flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
              <div className="flex items-center gap-3">
                <div className="w-11 h-11 md:w-12 md:h-12 bg-gradient-to-br from-emerald-500 to-dzGreen-600 rounded-xl flex items-center justify-center shadow-lg shadow-emerald-500/40">
                  <span className="text-2xl">üöó</span>
                </div>
                <div>
                  <h1 className="text-xl md:text-2xl font-semibold text-slate-50 tracking-tight">
                    {t.title}
                  </h1>
                  <p className="text-xs md:text-sm text-slate-300/80">
                    {t.subtitle}
                  </p>
                </div>
              </div>
              <div className="flex flex-col items-stretch gap-2 md:items-end">
                <div className="inline-flex items-center gap-2 text-[11px] text-slate-300/80 bg-slate-900/60 px-3 py-1 rounded-full border border-slate-700/80">
                  <span className="w-1.5 h-1.5 rounded-full bg-emerald-400 animate-pulse" />
                  <span>Live FX &amp; taxes offline ‚Äì estimation indicative</span>
                </div>
                <div className="flex gap-2 self-end">
                  {[
                    { code: 'ar', label: 'ÿßŸÑÿπÿ±ÿ®Ÿäÿ©' },
                    { code: 'tz', label: '‚µú‚¥∞‚µé‚¥∞‚µ£‚µâ‚µñ‚µú' },
                    { code: 'fr', label: 'Fran√ßais' }
                  ].map(({ code, label }) => (
                    <button
                      key={code}
                      onClick={() => setLang(code)}
                      className={`px-3 py-1.5 rounded-md text-xs font-medium border transition ${
                        lang === code
                          ? 'bg-slate-50 text-slate-900 border-slate-50 shadow-sm'
                          : 'bg-slate-900/60 hover:bg-slate-800 text-slate-100 border-slate-600'
                      }`}
                    >
                      {label}
                    </button>
                  ))}
                </div>
              </div>
            </div>
          </header>

          {/* Savings banner */}
          {vehicleAge === 'new' && carPrice && potentialUsedSavings > 0 && (
            <div className="max-w-6xl mx-auto px-4 mt-4">
              <div className="bg-emerald-950/60 border border-emerald-500/40 rounded-xl p-3.5 flex items-start gap-3 shadow-lg shadow-emerald-900/40">
                <div className="w-9 h-9 rounded-full bg-emerald-500/20 flex items-center justify-center">
                  <span className="text-lg">üí°</span>
                </div>
                <div className="text-sm text-emerald-50">
                  <div className="font-semibold">
                    {t.savingsBannerPrefix} {formatCurrency(potentialUsedSavings)} {t.savingsBannerSuffix}
                  </div>
                  <div className="mt-1 text-[11px] md:text-xs text-emerald-100/90">
                    {t.savingsBannerInfo}
                  </div>
                </div>
              </div>
            </div>
          )}

          {/* Two-rate explanation */}
          <div className="max-w-6xl mx-auto px-4 mt-4">
            <div className="card">
              <h3 className="text-sm md:text-base font-semibold text-slate-100 mb-3 flex items-center gap-2">
                <span className="w-6 h-6 rounded-full bg-slate-800 flex items-center justify-center text-xs">‚ÑπÔ∏è</span>
                {t.twoRateExplain}
              </h3>
              <div className="grid md:grid-cols-2 gap-4 text-xs md:text-sm text-slate-200">
                <div className="flex items-start gap-2">
                  <div className="w-2 h-2 rounded-full bg-amber-400 mt-1" />
                  <div>
                    <div className="font-semibold text-amber-300 flex items-center gap-2">
                      {t.blackMarketRate}
                      <span className="tag-yellow">{t.blackMarketRate}</span>
                    </div>
                    <p className="text-amber-100/90 mt-1 text-[11px] md:text-xs">
                      {t.blackMarketInfo}
                    </p>
                  </div>
                </div>
                <div className="flex items-start gap-2">
                  <div className="w-2 h-2 rounded-full bg-sky-400 mt-1" />
                  <div>
                    <div className="font-semibold text-sky-300 flex items-center gap-2">
                      {t.officialRate}
                      <span className="tag-blue">{t.officialRate}</span>
                    </div>
                    <p className="text-sky-100/90 mt-1 text-[11px] md:text-xs">
                      {t.officialInfo}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          {/* Main content */}
          <div className="max-w-6xl mx-auto px-4 mt-4">
            <div className="grid lg:grid-cols-[minmax(0,1.15fr),minmax(0,0.95fr)] gap-5 items-start">
              {/* Left: Inputs */}
              <div className="space-y-4">
                {/* Vehicle info */}
                <div className="card">
                  <h2 className="text-base md:text-lg font-semibold text-slate-100 mb-4 flex items-center gap-2">
                    <span className="w-7 h-7 rounded-full bg-slate-800 flex items-center justify-center text-sm">üöô</span>
                    {t.vehicleInfo}
                  </h2>

                  {/* Currency */}
                  <div className="mb-4">
                    <label className="block text-xs font-medium text-slate-300 mb-1">
                      {t.currency}
                    </label>
                    <div className="flex gap-2">
                      {['USD', 'EUR'].map(curr => (
                        <button
                          key={curr}
                          onClick={() => setCurrency(curr)}
                          className={`flex-1 py-2 text-xs font-semibold rounded-md border transition ${
                            currency === curr
                              ? 'bg-emerald-500 text-slate-950 border-emerald-400 shadow-md shadow-emerald-500/40'
                              : 'bg-slate-900/70 text-slate-100 border-slate-600 hover:bg-slate-800'
                          }`}
                        >
                          {curr === 'USD' ? '$ USD' : '‚Ç¨ EUR'}
                        </button>
                      ))}
                    </div>
                  </div>

                  {/* Car price */}
                  <div className="mb-4">
                    <label className="block text-xs font-medium text-slate-300 mb-1">
                      {t.carPrice}
                    </label>
                    <div className="relative">
                      <span className="absolute left-3 top-1/2 -translate-y-1/2 text-slate-500 text-xs font-semibold">
                        {currency === 'USD' ? '$' : '‚Ç¨'}
                      </span>
                      <input
                        type="number"
                        value={carPrice}
                        onChange={(e) => setCarPrice(e.target.value)}
                        placeholder="12300"
                        className="input-field pl-8"
                        min="0"
                      />
                    </div>
                  </div>

                  {/* Vehicle age */}
                  <div className="mb-4">
                    <label className="block text-xs font-medium text-slate-300 mb-1">
                      {t.vehicleAge}
                    </label>
                    <div className="grid grid-cols-2 gap-2">
                      {[
                        { value: 'new', label: t.brandNew, icon: '‚ú®' },
                        { value: 'used', label: t.usedUnder3, icon: 'üöó' }
                      ].map(({ value, label, icon }) => (
                        <button
                          key={value}
                          onClick={() => setVehicleAge(value)}
                          className={`py-2 px-3 rounded-md text-xs font-medium flex items-center justify-center gap-2 border transition ${
                            vehicleAge === value
                              ? 'bg-slate-50 text-slate-900 border-slate-50 shadow-sm shadow-slate-200'
                              : 'bg-slate-900/70 text-slate-100 border-slate-700 hover:bg-slate-800'
                          }`}
                        >
                          <span>{icon}</span>
                          <span className="text-[11px] md:text-xs">{label}</span>
                          {value === 'used' && (
                            <span className="badge-best">Best Value</span>
                          )}
                        </button>
                      ))}
                    </div>
                  </div>

                  {/* Engine type (for both new & used) */}
                  <div className="mb-1">
                    <label className="block text-xs font-medium text-slate-300 mb-1">
                      {t.engineType}
                    </label>
                    <div className="space-y-1">
                      {engineButtons.map(({ value, label, icon, rateUsed }) => (
                        <button
                          key={value}
                          onClick={() => setEngineType(value)}
                          className={`w-full py-2.5 px-3 rounded-md text-xs flex items-center justify-between border transition ${
                            engineType === value
                              ? 'bg-slate-100 text-slate-900 border-slate-100 shadow-sm'
                              : 'bg-slate-900/70 text-slate-100 border-slate-700 hover:bg-slate-800'
                          }`}
                        >
                          <span className="flex items-center gap-2">
                            <span>{icon}</span>
                            <span className="text-[11px] md:text-xs">{label}</span>
                          </span>
                          <span
                            className={`text-[10px] px-2 py-0.5 rounded-full ${
                              engineType === value ? 'bg-emerald-500/10 text-emerald-600' : 'bg-slate-800 text-slate-300'
                            }`}
                          >
                            {vehicleAge === 'used'
                              ? rateUsed
                              : `DD ${newCarDdRates[value]}%`}
                          </span>
                        </button>
                      ))}
                    </div>
                    {vehicleAge === 'new' && (
                      <p className="mt-1.5 text-[10px] text-slate-400">
                        DD variable selon le moteur. TCS 3% et TVA 19% restent inchang√©s.
                      </p>
                    )}
                  </div>
                </div>

                {/* Foreign costs */}
                <div className="card">
                  <h2 className="text-base font-semibold text-slate-100 mb-3 flex items-center gap-2">
                    <span>üö¢</span>
                    {t.foreignCosts}
                    <span className="tag-yellow ml-2">{t.blackMarketRate}</span>
                  </h2>
                  <div>
                    <label className="block text-xs font-medium text-slate-300 mb-1">
                      {t.freightInsurance}
                    </label>
                    <div className="relative">
                      <span className="absolute left-3 top-1/2 -translate-y-1/2 text-slate-500 text-xs font-semibold">
                        {currency === 'USD' ? '$' : '‚Ç¨'}
                      </span>
                      <input
                        type="number"
                        value={freightInsurance}
                        onChange={(e) => setFreightInsurance(e.target.value)}
                        placeholder="1500"
                        className="input-field pl-8"
                        min="0"
                      />
                    </div>
                  </div>
                </div>

                {/* Local costs */}
                <div className="card">
                  <h2 className="text-base font-semibold text-slate-100 mb-3 flex items-center gap-2">
                    <span>üìã</span>
                    {t.localCosts}
                    <span className="tag-green ml-2">DZD</span>
                  </h2>
                  <div className="space-y-3">
                    {[
                      { key: 'inspection', value: inspection, setter: setInspection, placeholder: '15000' },
                      { key: 'documentation', value: documentation, setter: setDocumentation, placeholder: '10000' },
                      { key: 'portBroker', value: portBroker, setter: setPortBroker, placeholder: '150000' }
                    ].map(({ key, value, setter, placeholder }) => (
                      <div key={key}>
                        <label className="block text-xs font-medium text-slate-300 mb-1">
                          {t[key]}
                        </label>
                        <div className="relative">
                          <input
                            type="number"
                            value={value}
                            onChange={(e) => setter(e.target.value)}
                            placeholder={placeholder}
                            className="input-field pr-10"
                            min="0"
                          />
                          <span className="absolute right-3 top-1/2 -translate-y-1/2 text-slate-500 text-xs">
                            DZD
                          </span>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>

                {/* Exchange rates */}
                <div className="card">
                  <h2 className="text-base font-semibold text-slate-100 mb-3 flex items-center gap-2">
                    <span>üí±</span>
                    {t.exchangeRates}
                  </h2>
                  <div className="grid grid-cols-2 gap-3 text-xs">
                    {/* Parallel */}
                    <div className="bg-slate-900/80 border border-amber-400/40 rounded-md p-3">
                      <h3 className="font-semibold text-amber-300 mb-2 flex items-center gap-2">
                        <span className="w-2 h-2 rounded-full bg-amber-400" />
                        {t.blackMarketRate}
                      </h3>
                      <div className="space-y-2">
                        <div>
                          <label className="block text-[11px] text-amber-200 mb-1">USD/DZD</label>
                          <input
                            type="number"
                            value={blackUSD}
                            min="0"
                            onChange={(e) => setBlackUSD(parseFloat(e.target.value) || 0)}
                            className="w-full py-1.5 px-2 rounded border border-amber-400/50 bg-slate-950/70 text-xs text-slate-50"
                          />
                        </div>
                        <div>
                          <label className="block text-[11px] text-amber-200 mb-1">EUR/DZD</label>
                          <input
                            type="number"
                            value={blackEUR}
                            min="0"
                            onChange={(e) => setBlackEUR(parseFloat(e.target.value) || 0)}
                            className="w-full py-1.5 px-2 rounded border border-amber-400/50 bg-slate-950/70 text-xs text-slate-50"
                          />
                        </div>
                      </div>
                    </div>

                    {/* Official */}
                    <div className="bg-slate-900/80 border border-sky-400/40 rounded-md p-3">
                      <h3 className="font-semibold text-sky-300 mb-2 flex items-center gap-2">
                        <span className="w-2 h-2 rounded-full bg-sky-400" />
                        {t.officialRate}
                      </h3>
                      <div className="space-y-2">
                        <div>
                          <label className="block text-[11px] text-sky-200 mb-1">USD/DZD</label>
                          <input
                            type="number"
                            value={officialUSD}
                            min="0"
                            onChange={(e) => setOfficialUSD(parseFloat(e.target.value) || 0)}
                            className="w-full py-1.5 px-2 rounded border border-sky-400/50 bg-slate-950/70 text-xs text-slate-50"
                          />
                        </div>
                        <div>
                          <label className="block text-[11px] text-sky-200 mb-1">EUR/DZD</label>
                          <input
                            type="number"
                            value={officialEUR}
                            min="0"
                            onChange={(e) => setOfficialEUR(parseFloat(e.target.value) || 0)}
                            className="w-full py-1.5 px-2 rounded border border-sky-400/50 bg-slate-950/70 text-xs text-slate-50"
                          />
                        </div>
                      </div>
                      <p className="text-[11px] text-sky-200/80 mt-2">
                        {t.lastUpdate}: {lastUpdate}
                      </p>
                    </div>
                  </div>
                </div>
              </div>

              {/* Right: Results */}
              <div className="lg:sticky lg:top-4 h-fit">
                {showResults && results ? (
                  <div className="card animate-fade-in">
                    <h2 className="text-base md:text-lg font-semibold text-slate-100 mb-3 flex items-center gap-2">
                      <span className="w-7 h-7 rounded-full bg-slate-800 flex items-center justify-center text-sm">üìä</span>
                      {t.results}
                    </h2>

                    <div className="space-y-3 text-xs md:text-sm text-slate-100">
                      {/* FOB */}
                      <div className="bg-slate-900/90 border border-amber-400/40 rounded-md p-3">
                        <div className="flex items-start justify-between gap-2">
                          <div>
                            <span className="font-semibold text-amber-300">
                              üöó {t.fobPrice}
                            </span>
                            <p className="text-[11px] text-amber-100/90 mt-1">
                              @ {t.atBlackRate}: {formatNumber(results.blackRate)} DZD/{currency}
                            </p>
                          </div>
                          <span className="font-semibold text-amber-100">
                            {formatCurrency(results.fobDZD)}
                          </span>
                        </div>
                        <p className="text-[11px] text-amber-100/80 mt-1">
                          {formatCurrency(results.price, currency)} √ó {formatNumber(results.blackRate)}
                        </p>
                      </div>

                      {/* Freight */}
                      <div className="bg-slate-900/90 border border-amber-400/40 rounded-md p-3">
                        <div className="flex items-start justify-between gap-2">
                          <div>
                            <span className="font-semibold text-amber-300">
                              üö¢ {t.freightCost}
                            </span>
                            <p className="text-[11px] text-amber-100/90 mt-1">
                              @ {t.atBlackRate}: {formatNumber(results.blackRate)} DZD/{currency}
                            </p>
                          </div>
                          <span className="font-semibold text-amber-100">
                            {formatCurrency(results.freightDZD)}
                          </span>
                        </div>
                        <p className="text-[11px] text-amber-100/80 mt-1">
                          {formatCurrency(results.freight, currency)} √ó {formatNumber(results.blackRate)}
                        </p>
                      </div>

                      {/* Local expenses */}
                      <div className="bg-slate-900/90 border border-emerald-400/40 rounded-md p-3">
                        <div className="flex items-start justify-between gap-2 mb-1">
                          <span className="font-semibold text-emerald-300">
                            üìã {t.otherFees}
                          </span>
                          <span className="font-semibold text-emerald-100">
                            {formatCurrency(results.localExpenses)}
                          </span>
                        </div>
                        <div className="space-y-1 text-[11px] text-emerald-100/90">
                          <div className="flex justify-between">
                            <span>‚Ä¢ {t.inspection}</span>
                            <span>{formatCurrency(results.inspectionFee)}</span>
                          </div>
                          <div className="flex justify-between">
                            <span>‚Ä¢ {t.documentation}</span>
                            <span>{formatCurrency(results.docFee)}</span>
                          </div>
                          <div className="flex justify-between">
                            <span>‚Ä¢ {t.portBroker}</span>
                            <span>{formatCurrency(results.portFee)}</span>
                          </div>
                        </div>
                      </div>

                      {/* CIF */}
                      <div className="bg-slate-900/90 border border-sky-400/40 rounded-md p-3">
                        <div className="flex items-start justify-between gap-2">
                          <div>
                            <span className="font-semibold text-sky-300">
                              üè¶ {t.customsCIF}
                            </span>
                            <p className="text-[11px] text-sky-100/90 mt-1">
                              @ {t.atOfficialRate}: {formatNumber(results.officialRate)} DZD/{currency}
                            </p>
                          </div>
                          <span className="font-semibold text-sky-50">
                            {formatCurrency(results.cifCustoms)}
                          </span>
                        </div>
                        <p className="text-[11px] text-sky-100/80 mt-1">
                          ({formatCurrency(results.price, currency)} + {formatCurrency(results.freight, currency)}) √ó {formatNumber(results.officialRate)}
                        </p>
                        <p className="text-[11px] text-sky-200/80 italic mt-1">
                          {t.forTaxCalc}
                        </p>
                      </div>

                      {/* Customs taxes */}
                      <div className="bg-slate-900/90 border border-sky-400/40 rounded-md p-3">
                        <div className="flex items-start justify-between gap-2 mb-2">
                          <div>
                            <span className="font-semibold text-sky-300">
                              üí∞ {t.customsRights}
                            </span>
                            <p className="text-[11px] text-sky-100/90 mt-1">
                              {t.onCIF}: {formatCurrency(results.cifCustoms)}
                            </p>
                          </div>
                          <span className="font-semibold text-sky-50">
                            {formatCurrency(results.totalTax)}
                          </span>
                        </div>
                        {results.taxes.breakdown ? (
                          <div className="space-y-1 text-[11px] md:text-xs text-slate-100">
                            <div className="flex justify-between bg-slate-950/80 rounded px-2 py-1">
                              <span>{t.dd} ({results.taxes.ddRate}%)</span>
                              <span>{formatCurrency(results.taxes.dd)}</span>
                            </div>
                            <div className="flex justify-between bg-slate-950/80 rounded px-2 py-1">
                              <span>{t.tcs} ({results.taxes.tcsRate}%)</span>
                              <span>{formatCurrency(results.taxes.tcs)}</span>
                            </div>
                            <div className="flex justify-between bg-slate-950/80 rounded px-2 py-1">
                              <span>{t.tva} ({results.taxes.tvaRate}%)</span>
                              <span>{formatCurrency(results.taxes.tva)}</span>
                            </div>
                            <p className="text-[11px] text-sky-200/80 mt-1">
                              TVA = (CIF + DD + TCS) √ó 19%
                            </p>
                          </div>
                        ) : (
                          <div className="space-y-1 text-[11px] md:text-xs">
                            <div className="flex justify-between bg-slate-950/80 rounded px-2 py-1">
                              <span>{t.baseRate}</span>
                              <span>{results.taxes.baseRate}%</span>
                            </div>
                            <div className="flex justify-between bg-slate-950/80 rounded px-2 py-1">
                              <span>{t.discount}</span>
                              <span>-{results.taxes.discount}%</span>
                            </div>
                            <div className="flex justify-between bg-emerald-950/80 border border-emerald-500/50 rounded px-2 py-1">
                              <span className="text-emerald-300 font-medium">{t.finalRate}</span>
                              <span className="text-emerald-200 font-semibold">{results.taxes.finalRate}%</span>
                            </div>
                          </div>
                        )}
                      </div>

                      {/* New car vignette */}
                      <div className={`rounded-md p-3 border ${
                        vehicleAge === 'new'
                          ? 'bg-red-950/80 border-red-500/50'
                          : 'bg-emerald-950/80 border-emerald-500/50'
                      }`}>
                        <div className="flex items-start justify-between gap-2">
                          <span className={`font-semibold text-sm ${
                            vehicleAge === 'new' ? 'text-red-200' : 'text-emerald-200'
                          }`}>
                            {vehicleAge === 'new' ? 'üìù' : '‚úÖ'} {t.newCarTax}
                          </span>
                          {vehicleAge === 'new' ? (
                            <span className="font-semibold text-red-100">
                              {formatCurrency(NEW_CAR_VIGNETTE)}
                            </span>
                          ) : (
                            <span className="font-semibold text-emerald-200 text-xs">
                              {t.notApplicable}
                            </span>
                          )}
                        </div>

                        {vehicleAge === 'used' && (
                          <p className="text-[11px] text-emerald-100 mt-1">
                            üíö {t.saved}: {formatCurrency(NEW_CAR_VIGNETTE)}
                          </p>
                        )}

                        {vehicleAge === 'new' && potentialUsedSavings > 0 && (
                          <p className="text-[11px] text-emerald-100 mt-2 font-medium">
                            üí° {t.newCarPromoPrefix} {formatCurrency(potentialUsedSavings)} {t.newCarPromoSuffix}
                          </p>
                        )}
                      </div>

                      {/* Total */}
                      <div className="result-card">
                        <div className="flex items-center justify-between gap-3">
                          <span className="font-semibold text-sm md:text-base">
                            üí∞ {t.totalCost}
                          </span>
                          <span className="font-bold text-xl md:text-2xl tracking-tight">
                            {formatCurrency(results.total)}
                          </span>
                        </div>
                      </div>

                      {/* Legal refs */}
                      <div className="mt-2 bg-slate-900/80 border border-slate-700/80 rounded-md p-3 text-[11px] text-slate-200">
                        <div className="font-semibold mb-1">{t.legalRef}</div>
                        <ul className="space-y-1">
                          <li>‚Ä¢ {t.decree}</li>
                          <li>‚Ä¢ {t.article}</li>
                          <li>
                            ‚Ä¢ <a
                                href="https://www.douane.gov.dz"
                                target="_blank"
                                rel="noopener noreferrer"
                                className="underline text-sky-300 hover:text-sky-200"
                              >
                                https://www.douane.gov.dz
                              </a> ‚Äì {t.douaneSite}
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                ) : (
                  <div className="card text-center">
                    <div className="w-20 h-20 mx-auto mb-4 rounded-full bg-slate-900/80 border border-slate-700 flex items-center justify-center shadow-inner">
                      <span className="text-4xl">üöó</span>
                    </div>
                    <p className="text-slate-200 text-sm md:text-base">
                      {t.enterPrice}
                    </p>
                    <p className="mt-2 text-[11px] text-slate-400">
                      {t.cifFormula}
                    </p>
                  </div>
                )}
              </div>
            </div>
          </div>

          {/* Footer */}
          <footer className="mt-8 border-t border-slate-800/80 py-4 bg-slate-950/90">
            <div className="max-w-6xl mx-auto px-4 text-center text-xs text-slate-400">
              <div className="flex items-center justify-center gap-2 mb-1">
                <span className="text-xl">üá©üáø</span>
                <span className="font-semibold text-emerald-400">Dzair Sourcing Cars</span>
              </div>
              <p>¬© 2025 - {t.footerRights}</p>
            </div>
          </footer>
        </div>
      );
    }

    const root = ReactDOM.createRoot(document.getElementById('app'));
    root.render(<DzairCalculator />);
  </script>
</body>
</html>
